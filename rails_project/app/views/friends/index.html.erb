<% if user_signed_in? %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-responsive">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user_id == current_user.id %>
          <tr>
            <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend, class: "link"  %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <!--
            <td><%= link_to "<i class='fas fa-eye'></i> Show".html_safe, friend, class:'btn btn-sm btn-secondary' %></td>
            <td><%= link_to "<i class='fas fa-edit'></i> Edit".html_safe, edit_friend_path(friend), class:'btn btn-sm btn-secondary' %></td>
            -->
            <td><%= link_to "<i class='fas fa-trash'></i> Delete".html_safe, friend, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to "<i class='fas fa-user-plus'></i> New Friend".html_safe, new_friend_path, class:'btn btn-success' %>

<% else %>

  <h1>Hello!!</h1>
  <p>This is the home page.</p>

<% end %>
