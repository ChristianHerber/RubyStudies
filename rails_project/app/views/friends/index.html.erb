<div class="table-responsive">
  <table class="table table-striped table-hover table-responsive">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "<i class='fas fa-eye'></i> Show".html_safe, friend, class:'btn btn-sm btn-secondary' %></td>
          <td><%= link_to "<i class='fas fa-edit'></i> Edit".html_safe, edit_friend_path(friend), class:'btn btn-sm btn-secondary' %></td>
          <td><%= link_to "<i class='fas fa-trash'></i> Destroy".html_safe, friend, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "<i class='fas fa-user-plus'></i> New Friend".html_safe, new_friend_path, class:'btn btn-success' %>
