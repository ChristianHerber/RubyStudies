
<div class="card bg-light border-0 py-4">

<div class="card-body">
  <h1 class="display-1"><%= @friend.first_name %> <%= @friend.last_name %></h1>

  <strong>Email:</strong> <%= @friend.email %> |
  <strong>Phone:</strong> <%= @friend.phone %> |
  <strong>Twitter:</strong> <%= @friend.twitter %>

  <div class="mt-4">
    <%= link_to 'Edit', edit_friend_path(@friend), class:'btn btn-secondary' %>
    <%= link_to 'Back', friends_path, class:'btn btn-dark' %>
  </div>
  
  </div>
</div>
